          "FadeIn",
          "SlideIn",
          "ScaleIn",
          "Stagger",
          "PageTransition",
          "AnimatedModal",
          "AnimatedDrawer"
        ]
      }
    ],
    "props": {
      "common": [
        {
          "name": "animated",
          "type": "boolean",
          "default": true,
          "description": "Enable/disable animations for the component"
        },
        {
          "name": "cyberpunk",
          "type": "boolean",
          "default": false,
          "description": "Apply cyberpunk styling to the component"
        },
        {
          "name": "className",
          "type": "string",
          "default": "",
          "description": "Additional CSS class names"
        }
      ],
      "Button": [
        {
          "name": "glowOnHover",
          "type": "boolean",
          "default": false,
          "description": "Add a glow effect on hover"
        }
      ],
      "Card": [
        {
          "name": "hoverable",
          "type": "boolean",
          "default": false,
          "description": "Add hover animation to the card"
        },
        {
          "name": "glowOnHover",
          "type": "boolean",
          "default": false,
          "description": "Add a glow effect on hover"
        }
      ],
      "Table": [
        {
          "name": "animateRows",
          "type": "boolean",
          "default": true,
          "description": "Animate table rows when they appear"
        }
      ]
