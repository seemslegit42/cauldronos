    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
    "none": "none",
    "glow": {
      "primary": "0 0 10px rgba(61, 170, 157, 0.5)",
      "success": "0 0 10px rgba(184, 134, 11, 0.5)",
      "warning": "0 0 10px rgba(255, 209, 102, 0.5)",
      "error": "0 0 10px rgba(239, 71, 111, 0.5)",
      "cyan": "0 0 15px rgba(0, 240, 255, 0.6)",
      "purple": "0 0 15px rgba(189, 0, 255, 0.6)"
